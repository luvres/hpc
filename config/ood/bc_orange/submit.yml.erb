<%
  # your image location will differ
  image="/opt/img-apps/orange.sif"
%>
---
script:
  queue_name: "apps"
  native:
    - "--job-name=orange"
    - "--mem=2G"
#  template: "vnc"

batch_connect:
  template: "vnc"
  websockify_cmd: '/usr/bin/websockify'
  header: |
    #!/bin/bash
    . ~/.bashrc
  script_wrapper: |
    cat << "CTRSCRIPT" > container.sh
    export PATH="$PATH:/opt/TurboVNC/bin"
    %s
    CTRSCRIPT

    mkdir -p /tmp/$USER
    export APPTAINER_BIND="/var,/run,/opt/miniconda"
    
    # your bindpath will differ
    apptainer exec <%= image %> /bin/bash container.sh
